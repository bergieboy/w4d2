<% cat.persisted? ? (type = :edit) : (type = :new) %>

<% if type == :new %>
  <% action_url = cats_url %>
<% elsif type == :edit %>
  <% action_url = cat_url(cat) %>
<% end %>


<form action="<%= action_url %>" method="post" />

  <% if type == :edit %>
      <input type="hidden" name="_method" value="PATCH" />
  <% end %>

  <label for="Name">Name:</label>
  <input type="text" name="cat[name]" value="<%= cat.name %>">
  <br>

  <label for="Sex">Sex:</label>
  <input type="radio" name="cat[sex]" value="M" id='maleChoice'>
  <label for="maleChoice">Male</label>
  <input type="radio" name="cat[sex]" value="F" id='femaleChoice'>
  <label for="femaleChoice">Female</label>
  <br>

  <label for="Color">Color:</label>
  <select name="cat[color]">
    <option value="" selected disabled>Choose Color</option>
    <option value="orange">Orange</option>
    <option value="black">Black</option>
    <option value="grey">Grey</option>
  </select>

  <br>
  <label for="Birthday">Birthday:</label>
  <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <br>
  <label for="Description">Description:</label>
  <br>
  <textarea type="text" name="cat[description]" value=""><%= cat.description %></textarea>

  <br>
  <input type="submit" value="<%= type == :new ? 'Add Cat' : 'Edit Cat' %>">

</form>
